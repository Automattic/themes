{
	"$schema": "https://json.schemastore.org/theme-v1.json",
	"version": 1,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "primary",
					"color": "#000000",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#333333",
					"name": "Secondary"
				},
				{
					"slug": "background",
					"color": "#FFFAED",
					"name": "Background"
				},
				{
					"slug": "tertiary",
					"color": "#FFFFFF",
					"name": "Tertiary"
				}
			]
		},
		"custom": {
			"heading": {
				"typography": {
					"fontWeight": "700"
				}
			}
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Source Serif Pro', serif",
					"fontSlug": "source-serif-pro",
					"slug": "body-font",
					"name": "Body (Source Serif Pro)",
					"google": "family=Source+Serif+Pro:ital,wght@0,200;0,300;0,400;0,600;0,700;0,900;1,200;1,300;1,400;1,600;1,700;1,900"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontStyle": "normal",
					"textTransform": "none"
				}
			},
			"core/post-title": {
				"typography": {
					"fontStyle": "italic",
					"fontWeight": "normal"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontStyle": "italic",
					"fontWeight": "normal"
				}
			},
			"h2": {
				"typography": {
					"fontStyle": "italic",
					"fontWeight": "normal"
				}
			},
			"h3": {
				"typography": {
					"fontStyle": "italic",
					"fontWeight": "normal"
				}
			},
			"h4": {
				"typography": {
					"fontStyle": "italic",
					"fontWeight": "normal"
				}
			},
			"h5": {
				"typography": {
					"fontStyle": "italic",
					"fontWeight": "normal"
				}
			},
			"h6": {
				"typography": {
					"fontStyle": "italic",
					"fontWeight": "normal"
				}
			}
		}
	}
}
