{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
        "color": {
            "palette": [
                {
                    "color": "#000",
                    "name": "Black",
                    "slug": "black"
                },
                {
                    "color": "#636363",
                    "name": "Dark Grey",
                    "slug": "dark-grey"
                },
                {
                    "color": "#FFF",
                    "name": "White",
                    "slug": "white"
                },
                {
                    "color": "#A43D00",
                    "name": "Brown",
                    "slug": "brown"
                },
                {
                    "color": "#FF7D2F",
                    "name": "Orange",
                    "slug": "orange"
                },
                {
                    "color": "#FDEEE5",
                    "name": "Light Orange",
                    "slug": "light-orange"
                }
            ]
        },
		"layout": {
			"contentSize": "76ch",
			"wideSize": "1280px"
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Helvetica Neue', Arial, sans-serif",
					"name": "Helvetica Neue",
					"slug": "helvetica-neue"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--helvetica-neue)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "#000"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"color": {
						"text": "#636363"
					},
					"typography": {
						"textDecoration": "none"
					}
				},
				":active": {
					"color": {
						"text": "#A43D00"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	],
	"version": 2
}
