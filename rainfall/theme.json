{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"settings": {
		"appearanceTools": true,
        "color": {
            "palette": [
                {
                    "color": "#000",
                    "name": "Foreground",
                    "slug": "foreground"
                },
                {
                    "color": "#FFF",
                    "name": "Background",
                    "slug": "background"
                },
                {
                    "color": "#FF7D2F",
                    "name": "Primary",
                    "slug": "primary"
                },
                {
                    "color": "#FDEEE5",
                    "name": "Secondary",
                    "slug": "secondary"
                }
            ]
        },
		"layout": {
			"contentSize": "76ch",
			"wideSize": "1280px"
		},
		"spacing": {
			"units": [
				"%",
				"px",
				"em",
				"rem",
				"vh",
				"vw"
			]
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "'Helvetica Neue', Arial, sans-serif",
					"name": "Helvetica Neue",
					"slug": "helvetica-neue"
				}
			]
		}
	},
	"styles": {
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--helvetica-neue)"
		},
		"elements": {
			"link": {
				"color": {
					"text": "#000"
				},
				"typography": {
					"textDecoration": "underline"
				},
				":hover": {
					"color": {
						"text": "#636363"
					},
					"typography": {
						"textDecoration": "none"
					}
				}
			}
		}
	},
	"templateParts": [
		{
			"area": "header",
			"name": "header"
		},
		{
			"area": "footer",
			"name": "footer"
		}
	],
	"version": 2
}
