{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Instrument Serif & Urbanist",
	"keywords": [
		"serif",
		"elegant",
		"modern",
		"versatile",
		"professional",
		"italic",
		"uppercase",
		"editorial"
	],
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "15px",
					"slug": "small",
					"fluid": {
						"min": "15px",
						"max": "17px"
					}
				},
				{
					"name": "Medium",
					"size": "26px",
					"slug": "medium",
					"fluid": {
						"min": "15px",
						"max": "26px"
					}
				},
				{
					"name": "Large",
					"size": "34px",
					"slug": "large",
					"fluid": {
						"min": "22px",
						"max": "34px"
					}
				},
				{
					"name": "Extra Large",
					"size": "64px",
					"slug": "x-large",
					"fluid": {
						"min": "47px",
						"max": "64px"
					}
				},
				{
					"name": "2X Large",
					"size": "90px",
					"slug": "xx-large",
					"fluid": {
						"min": "67px",
						"max": "90px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "400",
					"fontStyle": "italic"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "400",
					"fontStyle": "italic"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontSize": "19px",
					"fontWeight": "400",
					"fontStyle": "italic"
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "0.9",
					"fontWeight": "400",
					"letterSpacing": "-0.005em"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"letterSpacing": "-0.005em",
					"fontWeight": "400",
					"lineHeight": "1.1"
				}
			},
			"h3": {
				"typography": {
					"lineHeight": "1.1"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--urbanist)",
					"fontWeight": "600",
					"lineHeight": "1"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--urbanist)",
			"fontSize": "var(--wp--preset--font-size--small)",
			"fontWeight": "400",
			"lineHeight": "1.55"
		}
	}
}
