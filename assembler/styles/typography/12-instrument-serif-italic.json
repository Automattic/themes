{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Instrument Serif Italic",
	"keywords": ["serif", "elegant", "classic", "italic", "feminine", "uppercase", "mixed", "editorial"],
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "13px",
					"slug": "small",
					"fluid": {
						"min": "13px",
						"max": "13px"
					}
				},
				{
					"name": "Medium",
					"size": "26px",
					"slug": "medium",
					"fluid": {
						"min": "15px",
						"max": "26px"
					}
				},
				{
					"name": "Large",
					"size": "34px",
					"slug": "large",
					"fluid": {
						"min": "22px",
						"max": "34px"
					}
				},
				{
					"name": "Extra Large",
					"size": "64px",
					"slug": "x-large",
					"fluid": {
						"min": "47px",
						"max": "64px"
					}
				},
				{
					"name": "2X Large",
					"size": "90px",
					"slug": "xx-large",
					"fluid": {
						"min": "67px",
						"max": "90px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontWeight": "400",
					"lineHeight": "0.8",
					"fontStyle": "italic"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-sans)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "400",
					"textTransform": "uppercase",
					"letterSpacing": "1px"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontSize": "20px",
					"fontWeight": "400",
					"letterSpacing": "1px",
					"fontStyle": "italic"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "0.8",
					"letterSpacing": "-0.005em",
					"fontStyle": "italic"
				}
			},
			"h2": {
				"typography": {
					"lineHeight": "1.1",
					"letterSpacing": "-0.005em",
					"fontStyle": "italic"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-sans)",
					"lineHeight": "1.1",
					"fontSize": "var(--wp--preset--font-size--large)",
					"fontWeight": "400"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"lineHeight": "1.1"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"lineHeight": "1.1"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"lineHeight": "1.1"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontWeight": "400"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--instrument-sans)",
			"fontSize": "17px",
			"fontStyle": "normal",
			"fontWeight": "400",
			"lineHeight": "1.75"
		}
	}
}
