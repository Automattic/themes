{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Instrument Serif Italic",
	"keywords": ["serif", "elegant", "classic", "italic", "feminine", "uppercase", "mixed", "editorial"],
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "13px",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "22px",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "42px",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "68px",
					"slug": "x-large",
					"fluid": {
						"min": "28px",
						"max": "68px"
					}
				},
				{
					"name": "2X Large",
					"size": "90px",
					"slug": "xx-large",
					"fluid": {
						"min": "40px",
						"max": "90px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontWeight": "400",
					"lineHeight": "0.8",
					"fontStyle": "italic"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-sans)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "400",
					"textTransform": "uppercase",
					"letterSpacing": "1px"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontSize": "20px",
					"fontWeight": "400",
					"letterSpacing": "1px",
					"fontStyle": "italic"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "110px",
					"lineHeight": "0.8",
					"letterSpacing": "-0.005em",
					"fontStyle": "italic"
				}
			},
			"h2": {
				"typography": {
					"lineHeight": "1.1",
					"letterSpacing": "-0.005em",
					"fontStyle": "italic"
				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-sans)",
					"lineHeight": "1.1",
					"fontSize": "22px",
					"fontWeight": "500"
				}
			},
			"h4": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--inter)",
					"lineHeight": "1.1"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontWeight": "400"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--instrument-sans)",
			"fontSize": "17px",
			"fontStyle": "normal",
			"fontWeight": "400",
			"lineHeight": "1.75"
		}
	}
}
