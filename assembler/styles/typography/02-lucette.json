{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Lucette & DM Mono",
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "15px",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "20px",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "40px",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "60px",
					"slug": "x-large"
				},
				{
					"name": "2X Large",
					"size": "70px",
					"slug": "xx-large"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--dm-mono)",
					"fontWeight": "300"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontFamily": "var(--wp--preset--font-family--dm-mono)",
					"fontWeight": "300"
				}
			}
		},
		"elements": {
			"button": {
				"spacing": {
					"padding": {
						"bottom": "18px",
						"left": "24px",
						"right": "24px",
						"top": "18px"
					}
				},
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--dm-mono)",
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontWeight": "300"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--lucette)",
					"fontWeight": "normal"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "26px"
				}
			}
		},
		"spacing": {
            "blockGap": "calc(var(--wp--preset--spacing--20) + 8px)"
        },
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--dm-mono)",
			"lineHeight": "1.6",
			"fontSize": "var(--wp--preset--font-size--small)",
			"fontWeight": "300"
		}
	}
}
