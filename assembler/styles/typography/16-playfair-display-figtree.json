{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Playfair Display & Figtree",
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "17px",
					"slug": "small",
					"fluid": {
						"min": "15px",
						"max": "17px"
					}
				},
				{
					"name": "Medium",
					"size": "20px",
					"slug": "medium",
					"fluid": {
						"min": "18px",
						"max": "20px"
					}
				},
				{
					"name": "Large",
					"size": "42px",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "72px",
					"slug": "x-large",
					"fluid": {
						"min": "30px",
						"max": "72px"
					}
				},
				{
					"name": "2X Large",
					"size": "100px",
					"slug": "xx-large",
					"fluid": {
						"min": "40px",
						"max": "100px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--playfair-display)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "400",
					"fontStyle": "italic"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--figtree)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "400"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--playfair-display)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "400",
					"fontStyle": "italic"
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--playfair-display)",
					"fontSize": "160px",
					"lineHeight": "0.9",
					"fontWeight": "400",
					"letterSpacing": "-0.005em",
					"fontStyle": "italic"
				}
			},
			"h2": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--playfair-display)",
					"letterSpacing": "-0.005em",
					"fontWeight": "400",
					"lineHeight": "1.1",
					"fontStyle": "italic"

				}
			},
			"h3": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--playfair-display)",
					"letterSpacing": "-0.005em",
					"fontWeight": "400",
					"lineHeight": "1.1",
					"fontStyle": "italic"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--figtree)",
					"fontWeight": "600",
					"lineHeight": "1"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--figtree)",
			"fontSize": "var(--wp--preset--font-size--small)",
			"fontWeight": "300",
			"lineHeight": "1.55"
		}
	}
}
