{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Gabarito & Noto Sans Mono",
	"keywords": [
		"sans-serif",
		"monospace",
		"minimalistic",
		"simple",
		"uppercase",
		"bold",
		"modern",
		"tech"
	],
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "14px",
					"slug": "small",
					"fluid": {
						"min": "12px",
						"max": "14px"
					}
				},
				{
					"name": "Medium",
					"size": "18px",
					"slug": "medium",
					"fluid": {
						"min": "13px",
						"max": "18px"
					}
				},
				{
					"name": "Large",
					"size": "30px",
					"slug": "large",
					"fluid": {
						"min": "20px",
						"max": "30px"
					}
				},
				{
					"name": "Extra Large",
					"size": "50px",
					"slug": "x-large",
					"fluid": {
						"min": "34px",
						"max": "50px"
					}
				},
				{
					"name": "2X Large",
					"size": "72px",
					"slug": "xx-large",
					"fluid": {
						"min": "48px",
						"max": "72px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--gabarito)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "500",
					"letterSpacing": "1px",
					"textTransform": "uppercase"
				}
			},
			"core/navigation": {
				"typography": {
					"fontWeight": "400",
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)",
					"fontFamily": "var(--wp--preset--font-family--gabarito)",
					"fontWeight": "500",
					"letterSpacing": "1px",
					"textTransform": "uppercase"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--gabarito)",
					"fontWeight": "600",
					"lineHeight": "1",
					"textTransform": "uppercase"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
			"fontSize": "var(--wp--preset--font-size--small)",
			"lineHeight": "2"
		}
	}
}
