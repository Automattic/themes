{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Messapia & DM Sans",
	"categories": [ "serif", "elegant", "modern" ],
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "16px",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "18px",
					"slug": "medium",
					"fluid": {
						"min": "17px",
						"max": "18px"
					}
				},
				{
					"name": "Large",
					"size": "32px",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "46px",
					"slug": "x-large",
					"fluid": {
						"min": "36px",
						"max": "46px"
					}
				},
				{
					"name": "2X Large",
					"size": "72px",
					"slug": "xx-large",
					"fluid": {
						"min": "46px",
						"max": "72px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "500"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--messapia)",
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "500"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--messapia)",
					"fontSize": "18px",
					"letterSpacing": "0.05em"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--messapia)",
					"fontWeight": "normal",
					"lineHeight": "1.2"
				}
			},
			"h2": {
				"typography": {
					"lineHeight": "1.2"
				}
			},
			"h3": {
				"typography": {
					"lineHeight": "1.3",
					"fontSize": "24px"
				}
			},
			"h4": {
				"typography": {
					"lineHeight": "1.4"
				}
			},
			"h5": {
				"typography": {
					"lineHeight": "1.4"
				}
			},
			"h6": {
				"typography": {
					"lineHeight": "1.4"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--dm-sans)",
			"fontWeight": "300",
			"lineHeight": "1.65",
			"fontSize": "var(--wp--preset--font-size--medium)"
		}
	}
}
