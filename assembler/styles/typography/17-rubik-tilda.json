{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"title": "Rubik & Tilda Sans",
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "16px",
					"slug": "small",
					"fluid": {
						"min": "16px",
						"max": "18px"
					}
				},
				{
					"name": "Medium",
					"size": "24px",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "44px",
					"slug": "large"
				},
				{
                    "name": "Extra Large",
                    "size": "60px",
                    "slug": "x-large"
                },
                {
                    "fluid": {
                        "max": "96px",
                        "min": "40px"
                    },
                    "name": "2X Large",
                    "size": "96px",
                    "slug": "xx-large"
                }
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--rubik)",
					"fontWeight": "400"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--tilda-sans)",
					"fontWeight": "400"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--tilda-sans)",
					"fontWeight": "400",
					"fontSize": "16px",
					"letterSpacing": "2px"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--rubik)",
					"fontWeight": "300",
					"lineHeight": "1"
				}
			},
			"h1": {
				"typography": {
					"lineHeight": "0.9"
				}
			},
			"h2": {
				"typography": {
					"lineHeight": "1"
				}
			},
			"h3": {
				"typography": {
					"lineHeight": "1.2"
				}
			},
			"h4": {
				"typography": {
					"fontWeight": "400",
					"lineHeight": "1.2"
				}
			},
			"h5": {
				"typography": {
					"fontWeight": "400",
					"lineHeight": "1.2"
				}
			},
			"h6": {
				"typography": {
					"fontWeight": "400",
					"lineHeight": "1.2"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--tilda-sans)",
			"fontSize": "var(--wp--preset--font-size--small)",
			"fontStyle": "normal",
			"fontWeight": "400",
			"lineHeight": "1.75"
		}
	}
}
