{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Instrument Serif & Noto Mono",
	"keywords": [ "serif", "bold", "technical", "monospace", "uppercase" ],
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "12px",
					"slug": "small",
					"fluid": {
						"min": "12px",
						"max": "12px"
					}
				},
				{
					"name": "Medium",
					"size": "26px",
					"slug": "medium",
					"fluid": {
						"min": "15px",
						"max": "26px"
					}
				},
				{
					"name": "Large",
					"size": "34px",
					"slug": "large",
					"fluid": {
						"min": "22px",
						"max": "34px"
					}
				},
				{
					"name": "Extra Large",
					"size": "64px",
					"slug": "x-large",
					"fluid": {
						"min": "47px",
						"max": "64px"
					}
				},
				{
					"name": "2X Large",
					"size": "90px",
					"slug": "xx-large",
					"fluid": {
						"min": "67px",
						"max": "90px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontWeight": "400",
					"fontSize": "14px",
					"textTransform": "uppercase"
				}
			},
			"core/navigation": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontWeight": "400",
					"textTransform": "uppercase",
					"fontSize": "14px"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontFamily": { "ref": "styles.typography.fontFamily" },
					"fontSize": { "ref": "styles.typography.fontSize" },
					"fontWeight": "400",
					"textTransform": "uppercase"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontWeight": "400",
					"lineHeight": "0.8",
					"letterSpacing": "-0.005em"
				}
			},
			"h1": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--instrument-serif)",
					"fontSize": "var(--wp--preset--font-size--xx-large)",
					"lineHeight": "0.8"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)",
					"lineHeight": "1.1"
				}
			},
			"h3": {
				"typography": {
					"lineHeight": "1.1",
					"fontSize": "var(--wp--preset--font-size--large)",
					"letterSpacing": "0"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"lineHeight": "1.1",
					"letterSpacing": "0"
				}
			},
			"h5": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			},
			"h6": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--noto-sans-mono)",
			"fontSize": "13px",
			"fontStyle": "normal",
			"textTransform": "uppercase",
			"fontWeight": "400",
			"lineHeight": "1.85"
		}
	}
}
