{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Figtree",
	"keywords": [
		"sans-serif",
		"friendly",
		"bold",
		"italic",
		"modern",
		"expressive",
		"dynamic",
		"versatile"
	],
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "16px",
					"slug": "small",
					"fluid": {
						"min": "16px",
						"max": "17px"
					}
				},
				{
					"name": "Medium",
					"size": "24px",
					"slug": "medium",
					"fluid": {
						"min": "20px",
						"max": "24px"
					}
				},
				{
					"name": "Large",
					"size": "36px",
					"slug": "large",
					"fluid": {
						"min": "24px",
						"max": "36px"
					}
				},
				{
					"name": "Extra Large",
					"size": "54px",
					"slug": "x-large",
					"fluid": {
						"min": "36px",
						"max": "54px"
					}
				},
				{
					"name": "2X Large",
					"size": "80px",
					"slug": "xx-large",
					"fluid": {
						"min": "48px",
						"max": "80px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "800",
					"fontStyle": "italic"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "800",
					"fontStyle": "italic"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontSize": "17px",
					"fontWeight": "900",
					"fontStyle": "italic"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--figtree)",
					"fontWeight": "900",
					"fontStyle": "italic"
				}
			},
			"h1": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--xx-large)"
				}
			},
			"h2": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--x-large)"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--large)"
				}
			},
			"h4": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h5": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			},
			"h6": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--small)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--figtree)",
			"fontWeight": "400",
			"lineHeight": "1.5",
			"fontSize": "var(--wp--preset--font-size--small)"
		}
	}
}
