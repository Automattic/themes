{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"title": "Figtree",
	"keywords": [
		"sans-serif",
		"friendly",
		"bold",
		"italic",
		"modern",
		"expressive",
		"dynamic",
		"versatile"
	],
	"settings": {
		"typography": {
			"fontSizes": [
				{
					"name": "Small",
					"size": "17px",
					"slug": "small"
				},
				{
					"name": "Medium",
					"size": "20px",
					"slug": "medium",
					"fluid": {
						"min": "18px",
						"max": "20px"
					}
				},
				{
					"name": "Large",
					"size": "40px",
					"slug": "large"
				},
				{
					"name": "Extra Large",
					"size": "60px",
					"slug": "x-large"
				},
				{
					"name": "2X Large",
					"size": "78px",
					"slug": "xx-large",
					"fluid": {
						"min": "52px",
						"max": "78px"
					}
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "800",
					"fontStyle": "italic"
				}
			},
			"core/navigation": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)",
					"fontWeight": "800",
					"fontStyle": "italic"
				}
			}
		},
		"elements": {
			"button": {
				"typography": {
					"fontSize": "17px",
					"fontWeight": "900",
					"fontStyle": "italic"
				}
			},
			"heading": {
				"typography": {
					"fontFamily": "var(--wp--preset--font-family--figtree)",
					"fontWeight": "900",
					"fontStyle": "italic"
				}
			},
			"h1": {
				"typography": {
					"lineHeight": "0.9"
				}
			},
			"h2": {
				"typography": {
					"lineHeight": "1"
				}
			},
			"h3": {
				"typography": {
					"fontSize": "var(--wp--preset--font-size--medium)"
				}
			}
		},
		"typography": {
			"fontFamily": "var(--wp--preset--font-family--figtree)",
			"fontWeight": "400",
			"lineHeight": "1.5",
			"fontSize": "var(--wp--preset--font-size--small)"
		}
	}
}
