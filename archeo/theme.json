{
	"$schema": "https://json.schemastore.org/theme-v1.json",
	"version": 1,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "foreground",
					"color": "#242321",
					"name": "Foreground"
				},
				{
					"slug": "background",
					"color": "#FCFBF8",
					"name": "Background"
				},
				{
					"slug": "primary",
					"color": "#71706E",
					"name": "Primary"
				},
				{
					"slug": "tertiary",
					"color": "#CFCFCF",
					"name": "Tertiary"
				}
			]
		},
		"custom": {
			"heading": {
				"typography": {
					"fontWeight": 200
				}
			}
		},
		"typography": {
			"fontFamilies": [
				{
					"fontFamily": "\"Chivo\", serif",
					"fontSlug": "chivo",
					"slug": "body-font",
					"name": "Body (Chivo)",
					"google": "family=Chivo:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900"
				},
				{
					"fontFamily": "\"Chivo\", serif",
					"fontSlug": "chivo",
					"slug": "heading-font",
					"name": "Headings (System Font)",
					"google": "family=Chivo:ital,wght@0,300;0,400;0,700;0,900;1,300;1,400;1,700;1,900"
				}
			],
			"fontSizes": [
				{
					"name": "Small",
					"size": "16px",
					"slug": "small"
				},
				{
					"name": "Normal",
					"size": "18px",
					"slug": "normal"
				},
				{
					"name": "Medium",
					"size": "min(max(24px, 5vw), 32px)",
					"slug": "medium"
				},
				{
					"name": "Large",
					"size": "min(max(28px, 5vw), 48px)",
					"slug": "large"
				},
				{
					"name": "Huge",
					"size": "min(max(36px, 5vw), 72px)",
					"slug": "huge"
				}
			]
		}
	},
	"styles": {
		"blocks": {
			"core/site-title": {
				"typography": {
					"fontWeight": 400,
					"textTransform": "uppercase"
				}
			}
		},
		"elements": {
			"h1": {
				"typography": {
					"fontSize": "min(max(48px, 5vw), 100px)"
				}
			}
		}
	}
}
